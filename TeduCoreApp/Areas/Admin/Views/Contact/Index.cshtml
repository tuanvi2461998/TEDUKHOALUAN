@using Microsoft.AspNetCore.Authorization
@using TeduCoreApp.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/contact/index.js"></script>
    <script>
        var contact = new contactController();
        contact.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Blog <small>List blogs</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-3 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Tìm kiếm...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
        <div class="col-md-6 col-sm-12  form-group pull-right">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th>
                            <th>Lat</th>
                            <th>Lng</th>
                            <th>Website</th>
                            <th>Trạng thái</th>
                            <th width="20%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>{{Email}}</td>
        <td>{{Address}}</td>
        <td>{{Phone}}</td>
        <td>{{Lat}}</td>
        <td>{{Lng}}</td>
        <td>{{Website}}</td>
        <td>{{{Status}}}</td>
        <th scope="row">
            <a class="btn  btn-sm  btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></a>
            <a class="btn  btn-sm  btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></a>
        </th>
    </tr>
</script>
@Html.Partial("_AddEditModal.cshtml")