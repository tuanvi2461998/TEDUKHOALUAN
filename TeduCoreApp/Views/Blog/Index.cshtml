@model TeduCoreApp.Models.BlogViewModels.AllBlogViewModel
@{
    ViewData["Title"] = "Tất cả bài viết";
    ViewData["MetaDescription"] = "Tất cả bài viết";
}
<section class="blog_post">
    <div class="container">

        <!-- Center colunm-->
        <div class="blog-wrapper">
            <div class="page-title">
                <h2>Bài viết</h2>
            </div>
            <ul class="blog-posts">
                @foreach (var item in Model.Data.Results)
                {
                    var url = "/" + @item.SeoAlias + "-b." + @item.Id + ".html";
                    <li class="post-item col-md-4">
                        <div class="blog-box">
                            <a href="@url"> <img class="primary-img" src="@item.Image" alt="HTML template"></a>
                            <div class="blog-btm-desc">
                                <div class="blog-top-desc">
                                    <div class="blog-date">@item.DateCreated</div>
                                    <h4><a href="blog_single_post.html">@item.Name</a></h4>
                                    <div class="jtv-entry-meta"> <i class="fa fa-user-o"></i> <strong>Admin</strong> <a href="#"><i class="fa fa-commenting-o"></i> <strong></strong></a></div>
                                </div>
                                <p>@item.Description</p>
                                <a class="read-more" href="@url"> Đọc thêm</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
            @(await Component.InvokeAsync("Pager", Model.Data))
        </div>
        <!-- ./ Center colunm -->

    </div>
</section>
<!-- Main Container End -->
